# WMU Course Scheduler Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git - only commit this .env.example template

# Database Configuration
DB_USER=your_db_username
DB_PASSWORD=your_secure_password_here
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=wmu_schedules

# Server Configuration
SERVER_PORT=8080

# TLS/HTTPS Configuration
TLS_ENABLED=true
# Optional: Specify custom certificate paths (leave empty for auto-detection)
TLS_CERT_FILE=/etc/letsencrypt/live/your-domain.com/fullchain.pem
TLS_KEY_FILE=/etc/letsencrypt/live/your-domain.com/privkey.pem

# Logging Configuration
LOG_LEVEL=INFO

# Security Notes:
# - Use strong, unique passwords (consider using a password manager)
# - Never share or commit actual credentials to version control
# - Consider using environment-specific files (.env.development, .env.production)
# - Regularly rotate passwords and certificates
# - Use the principle of least privilege for database users
